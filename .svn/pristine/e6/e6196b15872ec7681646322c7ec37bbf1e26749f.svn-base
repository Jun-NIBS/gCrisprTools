#
# This is an example Crispr workflow, using NGS830 as an example.
#

library(gCrisprTools)
library(Biobase)
library(limma)
library(grid)
library(data.table)

#get the data in EP
library(ExpressionPlot)
proj <- ep.find.project("PRJ0006644")
annotation <- ep.load.annot(proj, "crispr-gRNA")
es <- ep.ExpressionSet(proj, feature.type = "crispr-gRNA", stat = "count")
aln <- ep.alignment.class.counts(proj)

#OR load from the supplied package data
#data("es")
#data("annotation")
#data("aln")

#Make a sample key, structured as an ordered factor
sk <- ordered(relevel(as.factor(pData(es)$TREATMENT_NAME), "ControlReference"))
names(sk) <- row.names(pData(es))

#Generate a contrast of interest using voom/limma
design <- model.matrix(~ 0 + TREATMENT_NAME, pData(es))
colnames(design) <- gsub('TREATMENT_NAME', '', colnames(design))
contrasts <- makeContrasts(DeathExpansion - ControlExpansion, levels=design)

#Optional trimming of trace reads (unnormalized object is recommended, see man page for details)
#es <- ct.filterReads(es, trim = 1000, sampleKey = sk)

vm <- voom(exprs(es), design, normalize.method="scale")

fit <- lmFit(vm, design)
fit <- contrasts.fit(fit, contrasts)
fit <- eBayes(fit)

##Edit the annotation file if you used ct.filterReads()
annotation <- ct.prepareAnnotation(annotation, fit, controls = "NTC")

#Generate results
resultsDF <- ct.generateResults(fit, annotation = annotation, RRAalphaCutoff = 0.1, permutations = 1000, scoring = "combined")

#OR use multicore if available
#resultsDF <- ct.generateResults(fit, annotation = annotation, RRAalphaCutoff = 0.1, permutations = 1000, multi.core = TRUE)

#OR load an example results object for testing purposes, trimming out reads as necessary.
#data("resultsDF")
#resultsDF <- resultsDF[(row.names(resultsDF) %in% row.names(annotation)),]

#Crispr-specific quality control and visualization tools (see man pages for details): 
ct.alignmentChart(aln, sk)
ct.rawCountDensities(es, sk)

ct.gRNARankByReplicate(es, sk)  #Visualization of gRNA abundance distribution
ct.gRNARankByReplicate(es, sk, annotation = annotation, geneSymb = "NTC")  #Show locations of NTC gRNAs
ct.gRNARankByReplicate(es, sk, annotation = annotation, geneSymb = "Ripk3") #Or gRNAs targeting an arbitrary gene

#Optional slope normalization, as appropriate: 
#es.n <- ct.normalizeBySlope(es)
#es.s <- ct.normalizeSpline(es, annotation)

#Visualize control guide behavior across conditions
ct.viewControls(es, annotation, sk, normalize = FALSE) 
ct.viewControls(es, annotation, sk, normalize = TRUE)
#ct.viewControls(es.s, annotation, sk, normalize = FALSE)

#View most variable gRNAs/Genes (as % of sequencing library)
ct.stackGuides(es, sk, plotType = "gRNA", annotation = annotation, nguides = 40)
ct.stackGuides(es, sk, plotType = "Target", annotation = annotation)
ct.stackGuides(es, sk, plotType = "Target", annotation = annotation, subset = names(sk)[grep('Expansion', sk)])

#View a CDF of genes/guides
ct.guideCDF(es, sk, plotType = "gRNA")
ct.guideCDF(es, sk, plotType = "Target", annotation = annotation)

#View top enriched/depleted candidates
rankedUpreg <- ct.topTargets(fit, resultsDF, annotation, ntargets = 10, enrich = TRUE)
rankedDnreg <- ct.topTargets(fit, resultsDF, annotation, ntargets = 10, enrich = FALSE)

#View the gRNA behavior and distributional information of gRNAs targeting a particular gene of interest
ct.viewGuides("Ripk3", fit, annotation)

#View ontological enrichment within the depleted/enriched guides
enrichmentResults <- ct.PantherPathwayEnrichment(resultsDF, pvalue.cutoff = 0.01, enrich = TRUE, organism = 'mouse')

#Make a report of a particular contrast in a directory of interest
#NOTE: not currently implemented on the cluster, so it's best to generate the file in a local directory and then move it somewhere visible. 
path2report <- ct.makeReport(fit, es, sk, annotation, resultsDF, aln, outdir = ".") #Make a report

#Add the report to the project page in EP. 
#NOTE: It is strongly recommended that you include the NGS identifier in the description string. 
ct.addCrisprReportToEp(proj, path = path2report, description="Crispr Contrast Report") 



